<p id="notice"><%= notice %></p>

<h1>Products</h1>

<table>
  <thead>
    <tr>
      <th>Slug</th>
      <th>Thubmnail</th>
      <th>Title en</th>
      <th>Title nb</th>
      <th>Description en</th>
      <th>Description nb</th>
      <th>Tags</th>
      <th>Tips en</th>
      <th>Tips nb</th>
      <th>Benefits en</th>
      <th>Benefits nb</th>
      <th>Featured</th>
      <th>Categories</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.slug %></td>
        <td><%= product.thubmnail %></td>
        <td><%= product.title_en %></td>
        <td><%= product.title_nb %></td>
        <td><%= product.description_en %></td>
        <td><%= product.description_nb %></td>
        <td><%= product.tags %></td>
        <td><%= product.tips_en %></td>
        <td><%= product.tips_nb %></td>
        <td><%= product.benefits_en %></td>
        <td><%= product.benefits_nb %></td>
        <td><%= product.featured %></td>
        <td><%= product.categories %></td>
        <td><%= link_to 'Show', product %></td>
        <td><%= link_to 'Edit', edit_product_path(product) %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

